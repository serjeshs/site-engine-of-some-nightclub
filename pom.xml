	<version>0.1</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java-version>1.8</java-version>
		<org.springframework-version>4.0.6.RELEASE</org.springframework-version>
		<org.springframework-security-version>3.2.3.RELEASE</org.springframework-security-version>
		<aspectj.version>1.7.4</aspectj.version>
		<org.hibernate-version>4.1.7.Final</org.hibernate-version>
		<org.apache.poi-version>3.10-FINAL</org.apache.poi-version>
		<org.aspectj-version>1.6.10</org.aspectj-version>
		<org.slf4j-version>1.6.6</org.slf4j-version>
		<servlet-api.version>3.1.0</servlet-api.version>
		<javax.servlet.jsp.jstl.version>1.2</javax.servlet.jsp.jstl.version>
		<javax.servlet.version>2.0</javax.servlet.version>
		<javax.mail.version>1.5.2</javax.mail.version>
		<lombok-maven-version>1.16.18.1</lombok-maven-version>
